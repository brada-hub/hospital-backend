APP_NAME="Sistema Hospitalario"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=America/La_Paz
APP_URL=https://api.tu-dominio.com

# Frontend URL para CORS
FRONTEND_URL=https://tu-dominio.com

# Sanctum
SANCTUM_STATEFUL_DOMAINS=tu-dominio.com

# Database - RDS en AWS
DB_CONNECTION=mysql
DB_HOST=tu-rds-endpoint.amazonaws.com
DB_PORT=3306
DB_DATABASE=hospital_db
DB_USERNAME=admin
DB_PASSWORD=

# Session
SESSION_DRIVER=database
SESSION_DOMAIN=.tu-dominio.com

# Cache
CACHE_STORE=redis
QUEUE_CONNECTION=redis

# Redis - ElastiCache en AWS
REDIS_HOST=tu-elasticache-endpoint.amazonaws.com
REDIS_PASSWORD=null
REDIS_PORT=6379
